<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State for focused field (current field) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor" />
            <corners android:radius="25dp" />
        </shape>
    </item>

    <!-- State for unfocused but filled field (previous fields) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryColor" />
            <corners android:radius="25dp" />
            <stroke android:width="1dp" android:color="@color/primaryColor" />
        </shape>
    </item>

    <!-- Default state for empty fields -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="25dp" />
            <stroke android:width="1dp" android:color="#DADCE0" />
        </shape>
    </item>
</selector>
