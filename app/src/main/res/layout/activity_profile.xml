<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="75dp">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Profile Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:background="@drawable/profilerounded">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profile_avatar"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bhart Singh"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                style="@style/profile_avatar"/>

            <TextView
                android:id="@+id/profileHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bhart"
                android:textColor="#888888"
                android:textSize="14sp"
                style="@style/profile_avatar"/>
        </LinearLayout>
    </LinearLayout>


    <!-- Library Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:background="@drawable/profile_options_rounded">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/your_lib" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Library"
            android:layout_marginStart="20dp"
            style="@style/profile_options"/>
    </LinearLayout>

    <!-- Settings Toggles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:background="@drawable/profile_options_rounded"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/dark_mode" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            style="@style/profile_options"
            android:layout_weight="1"
            android:layout_marginStart="20dp" />

        <Switch
            android:id="@+id/darkModeToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:thumbTint="@color/white"
            android:trackTint="@color/primaryColor"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:background="@drawable/profile_options_rounded"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bell" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            style="@style/profile_options"
            android:layout_weight="1"
            android:layout_marginStart="20dp" />

        <Switch
            android:id="@+id/notificationsToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:thumbTint="@color/white"
            android:trackTint="@color/primaryColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:background="@drawable/profile_options_rounded"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/hdcontent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load HD Content"
            style="@style/profile_options"
            android:layout_weight="1"
            android:layout_marginStart="20dp" />

        <Switch
            android:id="@+id/hdcontentToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:thumbTint="@color/white"
            android:trackTint="@color/primaryColor"/>
    </LinearLayout>



    <!-- Other Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:background="@drawable/profile_options_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback"
            style="@style/profile_options"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/profile_arrow"
            android:layout_marginRight="25dp"/>
    </LinearLayout>


    <!-- Other Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:background="@drawable/profile_options_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            style="@style/profile_options"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/profile_arrow"
            android:layout_marginRight="25dp"/>
    </LinearLayout>


    <!-- Other Links -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:background="@drawable/profile_options_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy"
            style="@style/profile_options"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/profile_arrow"
            android:layout_marginRight="25dp"/>
    </LinearLayout>

    <!-- Log Out Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:background="@drawable/logout_rounded">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            style="@style/profile_options"
            android:textColor="@color/white"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/logout_arrow"
            android:layout_marginRight="25dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_gravity="bottom"
    >

    <View
        android:id="@+id/dividerViewSecond"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DADCE0"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toTopOf="@id/customBottomNavigation" />

<include
    android:id="@+id/customBottomNavigation"
    layout="@layout/custom_bottom_navigation"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
</LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
