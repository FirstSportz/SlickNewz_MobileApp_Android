<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Share Option -->
    <TextView
        android:id="@+id/optionShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share via"
        android:drawableLeft="@drawable/share"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:clickable="true"
        style="@style/bottom_sheet_menu"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"/>

    <!-- Embed Option -->
    <TextView
        android:id="@+id/optionEmbed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Embed"
        android:drawableLeft="@drawable/share"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:clickable="true"
        style="@style/bottom_sheet_menu"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"/>

    <!-- Add to Bookmark Option -->
    <TextView
        android:id="@+id/optionBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to bookmark"
        android:drawableLeft="@drawable/bookmark"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:clickable="true"
        style="@style/bottom_sheet_menu"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"/>

    <!-- Save to Gallery Option -->
    <TextView
        android:id="@+id/optionSaveGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save to gallery"
        android:drawableLeft="@drawable/save"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:clickable="true"
        android:layout_marginTop="20dp"
        style="@style/bottom_sheet_menu"
        android:background="?attr/selectableItemBackground"/>

    <!-- Hide Post Option -->
    <TextView
        android:id="@+id/optionHidePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hide this post"
        android:drawableLeft="@drawable/eye"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:clickable="true"
        style="@style/bottom_sheet_menu"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="?attr/selectableItemBackground"/>

</LinearLayout>
