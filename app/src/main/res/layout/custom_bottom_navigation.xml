<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:paddingVertical="20dp"
    >

    <!-- Discover -->
    <LinearLayout
        android:id="@+id/nav_discover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingHorizontal="8dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        >

        <ImageView
            android:id="@+id/icon_discover"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/discover"
             />

        <TextView
            android:id="@+id/text_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Discover"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            style="@style/bottom_tab_text"/>
    </LinearLayout>

    <!-- Bookmarks -->
    <LinearLayout
        android:id="@+id/nav_bookmarks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
       >

        <ImageView
            android:id="@+id/icon_bookmarks"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bookmarks"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/text_bookmarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="My Feed"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            style="@style/bottom_tab_text"
            />
    </LinearLayout>

    <!-- Play -->
    <LinearLayout
        android:id="@+id/nav_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <ImageView
            android:id="@+id/icon_play"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/play"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/text_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Play"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            style="@style/bottom_tab_text"/>
    </LinearLayout>

    <!-- Profile -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="10dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Profile"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textStyle="bold"
            style="@style/bottom_tab_text"/>
    </LinearLayout>
</LinearLayout>
